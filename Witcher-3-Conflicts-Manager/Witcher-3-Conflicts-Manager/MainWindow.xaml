<Window x:Class="Witcher_3_Conflicts_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Witcher_3_Conflicts_Manager"
        
        xmlns:vm="clr-namespace:Witcher_3_Conflicts_Manager.ViewModels"
        
        mc:Ignorable="d"
        Title="Witcher 3 Mod Conflicts Manager" 
        Height="500" 
        Width="400"
        
        Background="BlueViolet"
        MinHeight="500"
        MinWidth="400"
        
        >

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>


    <Grid>
        <ContentControl Content="{Binding Content}"
                        Margin="10,10,10,0"
                        />

    </Grid>
</Window>
